{
    "name": "tesis/db-orm-mapper",
    "description": "Simple DB layer for mysqli extension and PDO class. It is based on mappers, files holding database table fields, primary key and auto_increment properties, which is helpful to compare fields for CRUD or select operations, and to provide better way to prevent SQL injections (only existing fields are selected, or inserted, ...)",
    "keywords": [
        "mysqli", "pdo", "sql-generator", "mapper", "wrapper", "sql injection", "CRUD"
    ],
    "homepage": "https://github.com/tesis/db-layer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tereza Simcic",
            "email": "tereza.simcic@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "classmap": [
          "src"
        ],
        "psr-4": {
            "Tesis\\DBLayer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPUnitTests\\": "tests/"
        }
    },
    "require": {
        "php" : ">=5.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
